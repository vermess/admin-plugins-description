{
  "name": "admin-plugins-description",
  "version": "1.0.0",
  "description": "Add custom descriptions to plugins in your admin panel on the plugins page and have more control over your installed plugins.",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel sync wpstart",
    "wpstart": "wp-scripts start --config webpack.config.js",
    "build": "npm-run-all --parallel wpbuild",
    "wpbuild": "wp-scripts build --config webpack.config.js",
    "sync": "browser-sync start -p 'localhost' --files '**/*.php' 'build/*.js' 'build/*.css'"
  },
  "author": "Micha≈Ç Robak",
  "license": "ISC",
  "devDependencies": {
    "@wordpress/scripts": "^30.1.0",
    "browser-sync": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "remove-files-webpack-plugin": "^1.5.0"
  }
}
